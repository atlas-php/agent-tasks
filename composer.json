{
    "name": "atlas-php/agent-tasks",
    "description": "Headless task lifecycle management for Codex agents.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "atlas-php/core": "^0.3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.17",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^8.24|^9.0|^10.0",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Atlas\\Agent\\Tasks\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Atlas\\Agent\\Tasks\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Atlas\\Agent\\Tasks\\Providers\\AgentTasksServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": "vendor/bin/pint",
        "test": "vendor/bin/phpunit",
        "analyse": "vendor/bin/phpstan analyse",
        "analyze": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
